{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "baseUrl": ".",
        "noEmit": true,
        "jsx": "react-jsx",
        "types": [
            "vite/client"
        ],
        "paths": {
            "@assets/*": [
                "src/assets/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@layouts/*": [
                "src/layouts/*"
            ],
            "@router/*": [
                "src/router/*"
            ],
            "@screens/*": [
                "src/screens/*"
            ],
            "@styles/*": [
                "src/styles/*"
            ],
            "@/*": [
                "src/*"
            ],
            "@about/*": [
                "src/screens/about/*"
            ]
        }
    },
    "include": [
        "src"
    ]
}